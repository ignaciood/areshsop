<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../partials/head') -%>
    <link rel="stylesheet" href="./css/login.css" type="text/css" />
  </head>

  <body class="body__login">  
    <%- include('../partials/header_login') -%>
    <main class="main__login">
      <div class="titulo-registro">Ingresar</div>
      <form action="/login" method="POST" class="registro-form">
        <div>
          <label class="email" for="email">EMAIL ADDRESS</label>
          <input type="email" name="email" placeholder="Username" autocomplete="email" class="relleno">
          <% if (locals.errors && errors.email) { %>
            <div>
              <%= errors.email.msg %>
            </div>
          <% } %>
        </div>
        <div>
          <label class="PASSWORD" for="password">PASSWORD</label>
          <input type="password" name="password" placeholder="Password" autocomplete="current-password" class="relleno">
        </div>
        <div>
          <label for="remember_user"> Recordar mi usuario </label> 
          <input type="checkbox" name="remember_user">
        </div>
        <button type="submit" name="button">SIGN IN</button>
      </form>
    </main>
    <%- include('../partials/footer') -%>
  </body>
</html>
